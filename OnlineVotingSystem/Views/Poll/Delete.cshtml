@model OnlineVotingSystem.Models.Entity.Voter

@{
    Layout = "_DashboardLayoutAdmin";
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Admin</h4>
    <hr />
    @foreach (var voter in ViewBag.voters)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @(voter.FirstName)
            </dt>
            <dd class="col-sm-10">
                @(voter.FirstName)
            </dd>
            <dt class="col-sm-2">
                @(voter.LastName)
            </dt>
            <dd class="col-sm-10">
                @(voter.LastName)
            </dd>
            <dt class="col-sm-2">
                @(voter.MiddleName)
            </dt>
            <dd class="col-sm-10">
                @(voter.MiddleName)
            </dd>
            <dt class="col-sm-2">
                @(voter.Email)
            </dt>
            <dd class="col-sm-10">
                @(voter.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CardNumber" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" asp-controller="Voter">Back to List</a>
        </form>
    }

</div>
